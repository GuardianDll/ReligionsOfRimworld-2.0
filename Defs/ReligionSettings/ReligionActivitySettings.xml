<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ReligionsOfRimworld.ReligionSettingsDef Name="RoRWorshipSettingsBase" Abstract="true">
		<settings Class="ReligionsOfRimworld.ReligionSettings_ReligionActivity">
			<tag>ActivityTag</tag>
		</settings>
	</ReligionsOfRimworld.ReligionSettingsDef>

	<ReligionsOfRimworld.ReligionSettingsDef ParentName="RoRWorshipSettingsBase">
		<defName>RoRWorshipSettingsTest</defName>
		<settings Class="ReligionsOfRimworld.ReligionSettings_ReligionActivity">	
			<properties>
				<li Class="ReligionsOfRimworld.ReligionProperty_ActivityTaskDef">
					<propertyObject>TaskWorship</propertyObject>
				</li>
				<li Class="ReligionsOfRimworld.ReligionProperty_ActivityTaskDef">
					<propertyObject>TaskSacrifice</propertyObject>
				</li>				
			</properties>
		</settings>
	</ReligionsOfRimworld.ReligionSettingsDef>

  	<ReligionsOfRimworld.ActivityJobQueueDef>
	    <defName>SacrificeQueue</defName>
		<activityNodes>
	    	<li>
	    		<organizerJob>Sacrifice</organizerJob>
	        	<congregationJob>ListenPrayers</congregationJob>
	    	</li>
		</activityNodes>
  	</ReligionsOfRimworld.ActivityJobQueueDef>

  	<ReligionsOfRimworld.ActivityJobQueueDef>
  		<defName>WorshipQueue</defName>
  		<activityNodes>
  			<li>
  				<organizerJob>ReadPrayers</organizerJob>
  				<congregationJob>ListenPrayers</congregationJob>
  			</li>
  		</activityNodes>
  	</ReligionsOfRimworld.ActivityJobQueueDef>

	<ReligionsOfRimworld.ActivityTaskDef>
		<defName>TaskSacrifice</defName>
		<label>sacrifice</label>
		<description>Sacrifice is the offering of food, objects or the lives of animals or humans to a higher purpose, in particular divine beings, as an act of propitiation or worship.</description>
		<ingredientValueGetterClass>IngredientValueGetter_Volume</ingredientValueGetterClass>
		<thingDefsCount>
			<li>
				<thing>Meat_Panther</thing>
				<count>14</count>
			</li>			
		</thingDefsCount>
		<activityJobQueue>SacrificeQueue</activityJobQueue>
	</ReligionsOfRimworld.ActivityTaskDef>

	<ReligionsOfRimworld.ActivityTaskDef>
		<defName>TaskWorship</defName>
		<label>worship</label>
		<description>Worship is an act of religious devotion usually directed towards a deity. An act of worship may be performed individually, in an informal or formal group, or by a designated leader. Such acts may involve honoring.</description>
		<ingredientValueGetterClass>IngredientValueGetter_Volume</ingredientValueGetterClass>
		<thingDefsCount>
			<li>
				<thing>Meat_Monkey</thing>
				<count>14</count>
			</li>			
		</thingDefsCount>
		<activityJobQueue>WorshipQueue</activityJobQueue>
	</ReligionsOfRimworld.ActivityTaskDef>
</Defs>
